
CREATE TABLE Disco (
  NroSerie INT PRIMARY KEY,
  TitoloAlbum VARCHAR(255) NOT NULL,
  Anno INT NOT NULL,
  Prezzo DECIMAL(10, 2) NOT NULL
);
