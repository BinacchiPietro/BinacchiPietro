-- create a table Esecuzione
CREATE TABLE Esecuzione (
    CodiceReg VARCHAR(50), PRIMARY KEY
    TitoloCanz VARCHAR(50), NOT NULL
    Anno INT, 
    FOREIGN KEY (CodiceReg) REFERENCES Contiene(CodiceReg)
);
