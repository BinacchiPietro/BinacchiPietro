-- create a table Cantante
CREATE TABLE Cantante (
    NomeCantante VARCHAR(50), PRIMARY KEY
    CodiceReg VARCHAR(50), NOT NULL
    FOREIGN KEY(NomeCantante) REFERENCES Autore(Nome)
);
