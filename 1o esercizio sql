-- create a table Contiene 
CREATE TABLE Contiente (
    NroSerieDisco INT, PRIMARY KEY
    CodiceReg VARCHAR(50), NOT NULL
    NroProg INT, NOT NULL
    FOREIGN KEY (NroSerieDisco) REFERENCES Disco(NroSerie)
);
