-- create a table Autore
CREATE TABLE Autore (
    Nome VARCHAR(50), PRIMARY KEY
    TitoloCanzone VARCHAR(50), NOT NULL 
    FOREIGN KEY(TitoloCanzone) REFERENCES Esecuzione(TitoloCanz)
);
